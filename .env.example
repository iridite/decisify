# Decisify Configuration
# Copy this file to .env and customize as needed

# Application
APP_NAME=Decisify
APP_VERSION=0.1.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Agent Orchestrator
CYCLE_INTERVAL=5.0
AGENT_TEMPERATURE=1.0

# Safety Gate
MAX_VOLATILITY_BUY=0.05
MAX_VOLATILITY_SELL=0.08
MIN_CONFIDENCE=0.15

# Sensors
SENSOR_TIMEOUT=3.0
SENSOR_MAX_RETRIES=3
SENSOR_RETRY_DELAY=0.5

# Logging
LOG_LEVEL=INFO
# LOG_FILE=decisify.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS (comma-separated list)
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://iridite.github.io

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Performance Monitoring
ENABLE_METRICS=true
METRICS_WINDOW_SIZE=100
